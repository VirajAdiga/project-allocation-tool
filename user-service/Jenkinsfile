pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('user-service') {
                    bat 'Building user-service jar'
                    bat "call mvnw.cmd clean compile test package"
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                dir('user-service') {
                    bat 'Archiving artifacts'
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }
}
